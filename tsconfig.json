{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"jsx": "react-jsx",
		"moduleDetection": "force",
		"jsxImportSource": "preact",
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@ext/*": ["assets/components/*"],
			"@/*": ["assets/tsx/*"],
			"@tsx/*": ["assets/tsx/*"],
			"@ts/*": ["assets/ts/*"],
			"@scss/*": ["assets/scss/*"],
			"@css/*": ["assets/css/*"]
		}
	},
  "ts-node": {
    "esm": true
  },	
	"include": ["assets/tsx", "assets/components"]
}
