{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@ext/*": ["src/assets/components/*"],
      "@/*": ["*"],
      "@tsx/*": ["src/scripts/tsx/*"],
      "@ts/*": ["src/scripts/ts/*"],
      "@scss/*": ["src/assets/scss/*"],
      "@css/*": ["src/assets/css/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "include": [
    "src",
		"scripts",
    "src/scripts",
		"src/scripts/ts"
  ]
}
