{
	"name": "preact-tsx-scss-template",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run types:gen:watch\" \"npm run fa:gen:watch\" \"npm run live\"",
		"live": "vite",
		"test": "vitest run",
		"test:watch": "vitest",
		"fa:gen": "tsx ./scripts/generate-fontawesome.ts",
		"fa:gen:watch": "tsx ./scripts/generate-fontawesome.ts",
		"tailwind:watch": "npx tailwindcss-cli -i ./src/assets/css/tailwind.css -o ./src/__generated__/tailwind.generated.css --watch",
		"types:gen": "tsx ./scripts/generate-type-metadata.ts",
		"types:gen:watch": "tsx ./scripts/generate-type-metadata.ts --watch",
		"scss": "sass src/assets/scss:src/assets/css --no-source-map --style=compressed --watch",
		"build": "npm run types:gen && npm run fa:gen && npm run build:bundle && vite build && vite build:importmap",
		"build:bundle": "vite build --config vite.merged.config.ts && shx mv dist/merged/index.html dist/merged/calc.bundle.html",
		"build:importmap": "tsx ./scripts/genImportMap.ts",
		"format": "prettier --write .",
		"lint": "eslint src/assets/tsx --ext .ts,.tsx",
		"pretty": "prettier --write \"./**/*.{httml,js,jsx,tsx,mjs,cjs,ts,tsx,json,scss,css}\""
	},
	"devDependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.7.2",
		"@fortawesome/free-brands-svg-icons": "^6.7.2",
		"@fortawesome/free-regular-svg-icons": "^6.7.2",
		"@fortawesome/free-solid-svg-icons": "^6.7.2",
		"@fortawesome/react-fontawesome": "^0.2.2",
		"@preact/preset-vite": "^2.10.1",
		"@tailwindcss/vite": "^4.1.10",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/preact": "^3.2.4",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.31",
		"@vitejs/plugin-react": "^4.5.2",
		"@vitest/coverage-v8": "^3.2.3",
		"@vitest/ui": "^3.2.3",
		"concurrently": "^9.1.2",
		"daisyui": "^5.0.43",
		"esm": "^3.2.25",
		"find-up": "^7.0.0",
		"happy-dom": "^17.6.3",
		"jsdom": "^26.1.0",
		"path": "^0.12.7",
		"preact": "^10.26.7",
		"prettier": "^3.5.3",
		"reflect-metadata": "^0.2.2",
		"sass-embedded": "^1.89.0",
		"shx": "^0.4.0",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.10",
		"ts-morph": "^13.0.3",
		"ts-node": "^10.9.2",
		"ts-patch": "^3.3.0",
		"tsx": "^4.20.1",
		"typescript": "^5.8.3",
		"vite": "^5.2.x",
		"vite-plugin-singlefile": "^2.2.0",
		"vitest": "^3.2.3"
	}
}
