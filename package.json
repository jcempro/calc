{
	"name": "preact-tsx-scss-template",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest",
		"dev": "npm run generate-types && vite",
		"generate-types": "ts-node ./scripts/generate-type-metadata.ts",
		"scss": "sass src/assets/scss:src/assets/css --no-source-map --style=compressed --watch",
		"build": "npm run generate-types && npm run build:bundle && vite build && vite build:importmap",
		"build:bundle": "vite build --config vite.merged.config.ts && shx mv dist/merged/index.html dist/merged/calc.bundle.html",
		"build:importmap": "tsx ./scripts/genImportMap.ts",
		"build:meta": "ts-node --esm ./scripts/generate-type-metadata.ts",
		"format": "prettier --write .",
		"lint": "eslint src/assets/tsx --ext .ts,.tsx"
	},
	"devDependencies": {
		"@preact/preset-vite": "^2.10.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/preact": "^3.2.4",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.21",
		"@vitest/coverage-v8": "^3.2.2",
		"@vitest/ui": "^3.2.3",
		"fast-glob": "^3.3.3",
		"find-up": "^7.0.0",
		"happy-dom": "^17.6.3",
		"jsdom": "^26.1.0",
		"path": "^0.12.7",
		"preact": "^10.26.7",
		"reflect-metadata": "^0.2.2",
		"sass": "^1.89.0",
		"sass-embedded": "^1.89.0",
		"shx": "^0.4.0",
		"ts-morph": "^26.0.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-plugin-singlefile": "^2.2.0",
		"vitest": "^3.2.3"
	}
}
